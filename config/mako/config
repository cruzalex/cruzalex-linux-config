# cruzAlex Mako Notification Configuration
# Minimal, keyboard-friendly notifications

# Global settings
max-visible=5
sort=-time
layer=overlay
anchor=top-right

# Appearance
font=JetBrainsMono Nerd Font 11
width=350
height=150
margin=10
padding=12
border-size=2
border-radius=8
icons=1
max-icon-size=48
icon-location=left

# Colors (updated by theme hooks)
background-color=#122738ee
text-color=#ffffff
border-color=#ffc600
progress-color=over #ffc60066

# Behavior
default-timeout=5000
ignore-timeout=0
group-by=app-name

# Actions
on-button-left=invoke-default-action
on-button-middle=dismiss-all
on-button-right=dismiss
on-touch=dismiss
on-notify=exec mpv /usr/share/sounds/freedesktop/stereo/message.oga 2>/dev/null || true

# Markup and format
markup=yes
format=<b>%s</b>\n%b

# Urgency levels
[urgency=low]
border-color=#555555
default-timeout=3000

[urgency=normal]
border-color=#ffc600
default-timeout=5000

[urgency=critical]
border-color=#ff0000
default-timeout=0
ignore-timeout=1

# App-specific rules
[app-name=Spotify]
border-color=#1db954
default-timeout=3000

[app-name=discord]
border-color=#5865f2

[app-name=Firefox]
border-color=#ff7139

[app-name=Chromium]
border-color=#4285f4

[app-name=Volume]
border-color=#6ae3fa
default-timeout=1500

[app-name=Brightness]
border-color=#ffe50a
default-timeout=1500

[app-name=Screenshot]
border-color=#38de21
default-timeout=3000

# Hidden/private notifications
[mode=do-not-disturb]
invisible=1
