# cruzAlex Mako Notification Configuration
# Minimal, keyboard-friendly notifications

# Global settings
max-visible=5
sort=-time
layer=overlay
anchor=top-right

# Appearance
font=JetBrainsMono Nerd Font 11
width=350
height=150
margin=10
padding=12
border-size=2
border-radius=8
icons=1
max-icon-size=48
icon-location=left

# Colors (updated by theme hooks)
background-color=#0f0f0fee
text-color=#eadccc
border-color=#e2be8a
progress-color=over #e2be8a66

# Behavior
default-timeout=5000
ignore-timeout=0
group-by=app-name

# Actions
on-button-left=invoke-default-action
on-button-middle=dismiss-all
on-button-right=dismiss
on-touch=dismiss
on-notify=exec mpv /usr/share/sounds/freedesktop/stereo/message.oga 2>/dev/null || true

# Markup and format
markup=yes
format=<b>%s</b>\n%b

# Urgency levels
[urgency=low]
border-color=#e2be8a
default-timeout=3000

[urgency=normal]
border-color=#e2be8a
default-timeout=5000

[urgency=critical]
border-color=#e2be8a
default-timeout=0
ignore-timeout=1

# App-specific rules
[app-name=Spotify]
border-color=#e2be8a
default-timeout=3000

[app-name=discord]
border-color=#e2be8a

[app-name=Firefox]
border-color=#e2be8a

[app-name=Chromium]
border-color=#e2be8a

[app-name=Volume]
border-color=#e2be8a
default-timeout=1500

[app-name=Brightness]
border-color=#e2be8a
default-timeout=1500

[app-name=Screenshot]
border-color=#e2be8a
default-timeout=3000

# Hidden/private notifications
[mode=do-not-disturb]
invisible=1
